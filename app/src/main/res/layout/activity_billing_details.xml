<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="8dp">

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/txt_billing_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:text="Billing details"
            android:textSize="20sp"
            android:textColor="@color/colorAppBlack"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="First name"
            android:textColor="@color/colorAppBlack"
            app:layout_constraintStart_toStartOf="@+id/txt_billing_details"
            app:layout_constraintTop_toBottomOf="@+id/txt_billing_details" />

        <TextView
            android:id="@+id/txt_last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="105dp"
            android:text="Last name"
            android:textColor="@color/colorAppBlack"
            app:layout_constraintStart_toEndOf="@+id/txt_first_name"
            app:layout_constraintTop_toTopOf="@+id/txt_first_name" />

        <EditText
            android:id="@+id/lbl_first_name"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/thin_red_rectangular_border"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="@+id/txt_first_name"
            app:layout_constraintTop_toBottomOf="@+id/txt_first_name" />

        <EditText
            android:id="@+id/lbl_last_name"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/thin_red_rectangular_border"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="@+id/txt_last_name"
            app:layout_constraintTop_toBottomOf="@+id/txt_last_name" />

        <TextView
            android:id="@+id/txt_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Company name"
            android:textColor="@color/colorAppBlack"
            app:layout_constraintStart_toStartOf="@+id/lbl_first_name"
            app:layout_constraintTop_toBottomOf="@+id/lbl_first_name" />

        <EditText
            android:id="@+id/lbl_company_name"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/thin_red_rectangular_border"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/lbl_last_name"
            app:layout_constraintStart_toStartOf="@+id/lbl_first_name"
            app:layout_constraintTop_toBottomOf="@+id/txt_company_name" />

        <TextView
            android:id="@+id/txt_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Country"
            android:textColor="@color/colorAppBlack"
            app:layout_constraintStart_toStartOf="@+id/lbl_company_name"
            app:layout_constraintTop_toBottomOf="@+id/lbl_company_name" />

        <EditText
            android:id="@+id/lbl_country"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="@drawable/thin_red_rectangular_border"
            app:layout_constraintEnd_toEndOf="@+id/lbl_company_name"
            app:layout_constraintStart_toStartOf="@+id/lbl_company_name"
            app:layout_constraintTop_toBottomOf="@+id/txt_country" />

        <TextView
            android:id="@+id/txt_street_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Street address"
            android:textColor="@color/colorAppBlack"
            app:layout_constraintStart_toStartOf="@+id/lbl_country"
            app:layout_constraintTop_toBottomOf="@+id/lbl_country" />

        <EditText
            android:id="@+id/lbl_house_no"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="House number and street name"
            android:paddingLeft="4dp"
            android:background="@drawable/thin_red_rectangular_border"
            app:layout_constraintEnd_toEndOf="@+id/lbl_country"
            app:layout_constraintStart_toStartOf="@+id/lbl_country"
            app:layout_constraintTop_toBottomOf="@+id/txt_street_address" />

        <EditText
            android:id="@+id/lbl_apartment_suite"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/thin_red_rectangular_border"
            android:ems="10"
            android:hint="Apartment, suite, unit etc.(optional)"
            android:paddingLeft="4dp"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/lbl_house_no"
            app:layout_constraintStart_toStartOf="@+id/lbl_house_no"
            app:layout_constraintTop_toBottomOf="@+id/lbl_house_no" />

        <TextView
            android:id="@+id/txt_town_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Town / City"
            android:textColor="@color/colorAppBlack"
            app:layout_constraintStart_toStartOf="@+id/lbl_apartment_suite"
            app:layout_constraintTop_toBottomOf="@+id/lbl_apartment_suite" />

        <EditText
            android:id="@+id/lbl_town_city"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="@drawable/thin_red_rectangular_border"
            app:layout_constraintEnd_toEndOf="@+id/lbl_apartment_suite"
            app:layout_constraintStart_toStartOf="@+id/lbl_apartment_suite"
            app:layout_constraintTop_toBottomOf="@+id/txt_town_city" />

        <TextView
            android:id="@+id/txt_state_zone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="State / Zone"
            android:textColor="@color/colorAppBlack"
            app:layout_constraintStart_toStartOf="@+id/lbl_town_city"
            app:layout_constraintTop_toBottomOf="@+id/lbl_town_city" />

        <EditText
            android:id="@+id/lbl_state_zone"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="@drawable/thin_red_rectangular_border"
            app:layout_constraintEnd_toEndOf="@+id/lbl_town_city"
            app:layout_constraintStart_toStartOf="@+id/lbl_town_city"
            app:layout_constraintTop_toBottomOf="@+id/txt_state_zone" />

        <TextView
            android:id="@+id/txt_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Phone"
            android:textColor="@color/colorAppBlack"
            app:layout_constraintStart_toStartOf="@+id/lbl_state_zone"
            app:layout_constraintTop_toBottomOf="@+id/lbl_state_zone" />

        <EditText
            android:id="@+id/lbl_phone"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:inputType="number"
            android:background="@drawable/thin_red_rectangular_border"
            app:layout_constraintEnd_toEndOf="@+id/lbl_first_name"
            app:layout_constraintStart_toStartOf="@+id/lbl_first_name"
            app:layout_constraintTop_toBottomOf="@+id/txt_phone" />

        <TextView
            android:id="@+id/txt_post_code_zip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Postcode / ZIP"
            android:textColor="@color/colorAppBlack"
            app:layout_constraintStart_toStartOf="@+id/txt_last_name"
            app:layout_constraintTop_toBottomOf="@+id/editText8" />

        <EditText
            android:id="@+id/lbl_post_code_zip"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="@drawable/thin_red_rectangular_border"        app:layout_constraintEnd_toEndOf="@+id/lbl_last_name"
            app:layout_constraintStart_toStartOf="@+id/lbl_last_name"
            app:layout_constraintTop_toBottomOf="@+id/txt_post_code_zip" />

        <TextView
            android:id="@+id/txt_email_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Email address"
            android:textColor="@color/colorAppBlack"
            app:layout_constraintStart_toStartOf="@+id/lbl_phone"
            app:layout_constraintTop_toBottomOf="@+id/lbl_phone" />

        <EditText
            android:id="@+id/lbl_email_address"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="@drawable/thin_red_rectangular_border"
            app:layout_constraintEnd_toEndOf="@+id/editText8"
            app:layout_constraintStart_toStartOf="@+id/editText8"
            app:layout_constraintTop_toBottomOf="@+id/txt_email_address" />

        <CheckBox
            android:id="@+id/cb_newsletter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:text="Subscribe to our newsletter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbl_email_address" />

        <Button
            android:id="@+id/btn_place_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_red_button_designs"
            android:text="Place order"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:paddingLeft="64dp"
            android:paddingRight="64dp"
            app:layout_constraintEnd_toEndOf="@+id/lbl_email_address"
            app:layout_constraintStart_toStartOf="@+id/lbl_email_address"
            app:layout_constraintTop_toBottomOf="@+id/cb_newsletter" />


    </android.support.constraint.ConstraintLayout>

</ScrollView>
